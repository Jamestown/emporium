<table id="index_item_list">
  <tr>
    <th><a href="?sort_by=publisher_id">Publisher</a></th>
    <th><a href="?sort_by=title">Title</a></th>
    <th><a href="?sort_by=isbn">ISBN</a></th>
    <th colspan="3"></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= h book.publisher.name %></td>
    <td><%= h book.title %></td>
    <td><%= h book.isbn %></td>
    <td><%= link_to 'Show', admin_book_path(book) %></td>
    <td><%= link_to 'Edit', edit_admin_book_path(book) %></td>
    <td>
      <%= link_to 'Delete', admin_book_path(book), :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<%= will_paginate @books %>

<br />

<%= link_to 'New book', new_admin_book_path %>