<h1>Listing publishers</h1>

<table id="index_item_list">
  <tr>
    <th>Name</th>
    <th colspan="3">&nbsp;</th>
  </tr>
  
<% for publisher in @publishers %>
  <tr>
    <td><%=h publisher.name %></td>
    <td><%= link_to 'Show', admin_publisher_path(publisher) %></td>
    <td><%= link_to 'Edit', edit_admin_publisher_path(publisher) %></td>
    <td>
      <%= link_to 'Delete ', admin_publisher_path(publisher), :confirm => 'Are you sure?', 
          :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
<br />

<%= link_to 'New publisher', new_admin_publisher_path %>
